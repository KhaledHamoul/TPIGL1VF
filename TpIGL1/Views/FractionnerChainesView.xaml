<UserControl x:Class="TpIGL1.Views.FractionnerChainesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TpIGL1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    <Grid>
        <Button x:Name="button"  Content="Fractionner la chaine" Margin="32,274,26,0" VerticalAlignment="Top" Click="button_Click" />
        <RichTextBox x:Name="inputText" Height="178" VerticalAlignment="Top" Margin="32,32,26,0" Background="{x:Null}" Foreground="White"/>
        <Label x:Name="label1" Content="Spécifier le séparateur" HorizontalAlignment="Left" Margin="32,232,0,0" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="separateur" TextAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="207,235,0,0" TextWrapping="Wrap" MaxLength="1" VerticalAlignment="Top" Width="32"/>
        <ListBox x:Name="listBox" Margin="32,367,26,57" BorderBrush="#FFABADB3" BorderThickness="1">
        </ListBox>
        <Label x:Name="intermidiate" Content="{Binding InputText,Mode =TwoWay}" Height="0" Width="0"></Label>

    </Grid>
</UserControl>
